@page
@model CBTDWeb.Pages.Property.InsertPropertyModel
@{
ViewData["Title"] = "Insert Property";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Property.PropertyName"></label>
        <input asp-for="Property.PropertyName" class="form-control" />
        <span asp-validation-for="Property.PropertyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.PropertyType"></label>
        <input asp-for="Property.PropertyType" class="form-control" />
        <span asp-validation-for="Property.PropertyType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.TotalOccupancy"></label>
        <input asp-for="Property.TotalOccupancy" class="form-control" />
        <span asp-validation-for="Property.TotalOccupancy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.TotalBedrooms"></label>
        <input asp-for="Property.TotalBedrooms" class="form-control" />
        <span asp-validation-for="Property.TotalBedrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.TotalBathrooms"></label>
        <input asp-for="Property.TotalBathrooms" class="form-control" />
        <span asp-validation-for="Property.TotalBathrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Description"></label>
        <textarea asp-for="Property.Description" class="form-control"></textarea>
        <span asp-validation-for="Property.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Address"></label>
        <input asp-for="Property.Address" class="form-control" />
        <span asp-validation-for="Property.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.City"></label>
        <input asp-for="Property.City" class="form-control" />
        <span asp-validation-for="Property.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.State"></label>
        <input asp-for="Property.State" class="form-control" />
        <span asp-validation-for="Property.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Amenity Types</label>
        @foreach (var item in Model.AmenityTypes)
        {
        <div class="form-check">
            <input type="checkbox" name="SelectedAmenityTypes" value="@item.Value" class="form-check-input" id="amenity_@item.Value" />
            <label class="form-check-label" for="amenity_@item.Value">@item.Text</label>
        </div>
        }
    </div>

    <div class="form-group">
        <label>Fee Types</label>
        @foreach (var item in Model.FeeTypes)
        {
        <div class="form-check">
            <input type="checkbox" name="SelectedFeeTypes" value="@item.Value" class="form-check-input" id="fee_@item.Value" />
            <label class="form-check-label" for="fee_@item.Value">@item.Text</label>
        </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="Property.MediaItems">Upload Media</label>
        <input type="file" asp-for="Property.MediaItems" multiple />
        <span asp-validation-for="Property.MediaItems" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
