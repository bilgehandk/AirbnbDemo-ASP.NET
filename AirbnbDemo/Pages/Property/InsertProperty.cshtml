@page
@model CBTDWeb.Pages.Property.InsertPropertyModel
@if (Model.AmenityTypes != null && Model.AmenityTypes.Any())
{
<select asp-for="Property.Amenities.First().AmenityType" asp-items="Model.AmenityTypes">
    <option value="">-- Select Amenity Type --</option>
</select>
}
else
{
<p>No Amenity Types available.</p>
}

@if (Model.FeeTypes != null && Model.FeeTypes.Any())
{
<select asp-for="FeeTypes.Any()" asp-items="Model.FeeTypes">
    <option value="">-- Select Fee Type --</option>
</select>
}
else
{
<p>No Fee Types available.</p>
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-black pt-4 pb-3 text-center">
        <h2 class="text-white py-2">@((Model.Property.Id == 0) ? "Create" : "Edit") Property</h2>
    </div>

    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data" class="border p-3">
            <div class="row">
                <!-- Property Name -->
                <div class="mb-3">
                    <label asp-for="Property.PropertyName" class="ms-2"></label>
                    <input asp-for="Property.PropertyName" class="form-control" />
                    <span asp-validation-for="Property.PropertyName" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Property.Description" class="ms-2"></label>
                    <textarea asp-for="Property.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Property.Description" class="text-danger"></span>
                </div>

                <!-- Amenity Type -->
                <div class="mb-3">
                    <label asp-for="Property.Amenities.First().AmenityTypeId" class="ms-2">Amenity Type</label>
                    <select asp-for="Property.Amenities.First().AmenityTypeId" asp-items="Model.AmenityTypes" class="form-select"></select>
                    <span asp-validation-for="Property.Amenities.First().AmenityTypeId" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="Property.Prices.First().Amount" class="ms-2">Price</label>
                    <input asp-for="Property.Prices.First().Amount" class="form-control" />
                    <span asp-validation-for="Property.Prices.First().Amount" class="text-danger"></span>
                </div>

                <!-- Media Item (Image) -->
                <div class="mb-3">
                    <label for="Property.MediaItems.First().UrlPath" class="form-label">
                        @(Model.Property.MediaItems.FirstOrDefault()?.UrlPath != null ? "Replace " : "") Picture
                    </label>
                    <input class="form-control" type="file" asp-for="Property.MediaItems.First().UrlPath">
                    <span class="text-danger" asp-validation-for="Property.MediaItems.First().UrlPath"></span>

                    @if (Model.Property.MediaItems.FirstOrDefault()?.UrlPath != null)
                    {
                    <input class="visually-hidden" type="hidden" asp-for="Property.MediaItems.First().UrlPath" />
                    <div class="mt-2">
                        <img class="img-thumbnail" src="@Model.Property.MediaItems.First().UrlPath" />
                    </div>
                    }
                </div>
            </div>

            <!-- Submit and Back Buttons -->
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        @((Model.Property.Id == 0) ? "Create" : "Update")
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: "lists",
        menubar: "file edit format"
    });
</script>
}
