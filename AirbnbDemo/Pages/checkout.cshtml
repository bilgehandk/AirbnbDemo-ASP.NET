@page
@model CBTDWeb.Pages.checkout

    <div class="row">

        <div class="mx-auto text-center col-md-4 order-md-2" style="width: 400px">
            <h4>Purchase Summary</h4>
        </div>
    </div>


    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Property Id</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Price</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>
                <p asp-page="" asp-route-id="" class=" mx-2">
                    <i class="">Property ID</i>
                </p>
            </th>
            <th>
                <p asp-page="" asp-route-id="" class=" mx-2">
                    <i class="">Start Date</i>
                </p>
            </th>
            <th>
                <p asp-page="Delete" asp-route-id="" class=" mx-2">
                    <i class="">End Date</i>
                </p>
            </th>
            <th>
                <p asp-page="Delete" asp-route-id="" class=" mx-2">
                    <i class="">Total Price</i>
                </p>
            </th>

        </tr>

        </tbody>
        <tfoot>
        <tr>
            <th colspan="3" class="text-right">Total Cost:</th>
            <th>
                <p>@* $@Model.Prices.Price.Sum(i)(i => i.TotalPrice).ToString("c") *@
                    AtModel.Prices.Price.Sum
                </p>
            </th>
        </tr>
        </tfoot>
    </table>


<div class="container">
    <div class="row">

        <div class="mx-auto text-center col-md-4 order-md-2" style="width: 400px">
            <h4 class="mb-3">Personal information requesting to book</h4>
            <form class="needs-validation" novalidate="">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="username">Phone Number</label>
                    <input type="text" class="form-control" id="username" placeholder="xxx-xxx-xxxx" required="">
                    <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email">Email <span class="text-muted"></span></label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com">
                    <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                    </div>
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Request to Book</button>
            </form>
        </div>
    </div>
</div>
