@page
@model PropertyDetailsModel
@{
}
<form method="post">
    <input hidden asp-for="@Model.objProperty.Id" />

    <div class="container  pb-4 border d-flex flex-column align-items-center">
        <div class="col-8">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.objProperty.ImageUrl" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.objProperty.SecondImageUrl" class="d-block w-100" alt="...">
                    </div>
                    <!--
                    <div class="carousel-item">
                        <img src="./images/properties/p1_garden.webp" class="d-block w-100" alt="...">
                    </div>
                    -->
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="d-flex flex-row justify-content-between mt-4 w-100">
            <div class="card container">
                <div class="card-header bg-primary text-light d-flex flex-row justify-content-between">
                    <div class="col-8">
                        <h1>@Model.objProperty.PropertyName</h1>
                        <p> @Model.objProperty.PropertyType</p>
                        <p> @Model.hostUser.FullName </p>
                    </div>
                    <div class="col-4 d-flex flex-column text-center justify-content-between">
                        <div class="col-12 ">
                            <h2>@Model.objProperty.Prices</h2>
                        </div>
                        <div class=" d-flex flex-row justify-content-center">

                            <div class="col-3 p-1 column align-content-center">
                                <i class="bi bi-person-circle"></i>
                                <p>@Model.objProperty.TotalOccupancy</p>
                            </div>
                            <div class="col-3 p-1 column align-content-center">
                                <ion-icon name="bed-outline"></ion-icon>
                                <p>@Model.objProperty.TotalBedrooms</p>
                            </div>

                            <div class="col-3 p-1 column align-content-center">
                                <i class="bi bi-tsunami"></i>
                                <p>@Model.objProperty.TotalBathrooms</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-6 col-lg-6 pb-4">
                                <div class="column my-1">
                                    <div class="col-12">
                                        <label>Address</label>
                                    </div>
                                    <div class="col-12">
                                        <label>@Model.objProperty.Address</label>
                                    </div>
                                    <div class="col-12 border d-flex flex-row my-auto p-1">
                                        <p>@Model.objProperty.Address<p>
                                    </div>
                                    <!--
                                    <div class="col-12">

                                        <input readonly class="form-control" placeholder="{{Address}}" />
                                        <span class="text-danger"></span>

                                    </div>

                                    -->

                                    <div class="col-12">
                                        <label>City:</label>
                                    </div>
                                  
                                    <div class="col-12 border d-flex flex-row my-auto p-1">
                                        <p>@Model.objProperty.City<p>
                                    </div>
                                    <div class="col-12">
                                        <label>State</label>
                                    </div>
                                    <div class="col-12 border d-flex flex-row my-auto p-1">
                                        <p>@Model.objProperty.State<p>
                                    </div>




                                    <div class="col-12">
                                        <label>Amenity</label>
                                    </div>
                                    <div class="col-12 border d-flex flex-row my-auto p-1">
                                        <p>@Model.objProperty.Amenity.Name<p>
                                    </div>

                                    <div class="col-12">
                                        <label>Fee</label>
                                    </div>
                                    <div class="col-12 border d-flex flex-row my-auto p-1">
                                        <p>@Model.objProperty.Fee.Name<p>
                                    </div>

                                </div>
                            </div>
                            <div class="col-6 col-md-6 reserve border bg-primary p-4 text-white">
                                <div class="col-12">
                                    <label>Check In</label>
                                </div>
                                <div class="col-12">

                                    <input readonly class="form-control" placeholder="{{State}}" />
                                    <span class="text-danger"></span>

                                </div>
                                <div class="col-12">
                                    <label>Check Out</label>
                                </div>
                                <div class="col-12">

                                    <input readonly class="form-control" placeholder="{{State}}" />
                                    <span class="text-danger"></span>

                                </div>
                                <div class="col-12">
                                    <label>Number of Hosts:</label>
                                </div>
                                <div class="col-12">

                                    <input readonly class="form-control" placeholder="{{State}}" />
                                    <span class="text-danger"></span>

                                </div>
                                <hr style="border: none; height: 1px; background-color: white;">
                                <div class="row">
                                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                        <div class="row justify-content-between">

                                            <div class="col-6">Total:</div>
                                            <div class="col-6">Price</div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class=" col-md-6 pb-1">
                            <a class="btn btn-success form-control " style="height:50px;" asp-page="Index">Back to Home</a>
                        </div>

                        <div class=" col-md-6 pb-1">
                            <a class="btn btn-danger form-control" style="height:50px" asp-area="Identity" asp-page="/Account/Login">Login to Add to Cart</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
</form>