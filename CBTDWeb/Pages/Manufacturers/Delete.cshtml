@page
@model CBTDWeb.Pages.Manufacturers.DeleteModel
@{
}
<div class="card shadow border-0 mt-4">
   

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-danger">Delete Manufacturer</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input readonly asp-for="objManufacturer.Name" class="form-control border-0 shadow" />
                    <label asp-for="objManufacturer.Name" class="ms-2"></label>
                    <span asp-validation-for="objManufacturer.Name" class="text-danger"></span>
                 </div>



                <input type="hidden" asp-for="objManufacturer.Id" />
                
                <div class="row pt-2">
                    <button type="submit" class="btn btn-danger form-control">Delete Manufacturer</button>
                    <a asp-page="Index" class="btn btn-outline-primary border  form-control">
                        Back to List
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>
